<ul class="[ oocss-full-container-width oocss-sub_section--nav ]">
    <li class="[ oocss-full-container-width oocss-sub_section-nav--bloc ]">
        <div class="[ oocss-sub_section-nav-bloc--head ]">
            <h3>Boîte de réception</h3>
        </div>
        <ul class="[ oocss-sub_section-nav-bloc--content ]">
            {% if countMessages('unread') > 0 %}
                <li>
                    <a class="[ oocss-button oocss-discret oocss-headed-block oocss-horizontal oocss-s ] messages-unread" href="{{ path('mesclics_admin_messages', {'filter': 'unread'}) }}">Non lus<span class="[ oocss-index oocss-highlight ]">{{ countMessages('unread') }}</span></a>
                    
                </li>
            {% endif %}

            {% if countMessages('received') > 0 %}
                <li>
                    <a class="[ oocss-button oocss-discret oocss-headed-block oocss-horizontal oocss-s ] messages-all" href="{{ path('mesclics_admin_messages', {'page': 1, 'filter': 'received'}) }}">Tous
                    <span class="[ oocss-index ]">{{ countMessages('received') }}</span></a>
                </li>
            {% endif %}
        </ul>
    </li>

    <li class="[ oocss-sub_section-nav--bloc ]">
        <div class="[ oocss-sub_section-nav-bloc--head ]">
            <h3>Boîte d'envoi</h3>
        </div>
        <ul class="[ oocss-sub_section-nav-bloc--content ]">
            <li>
                <a class="[ oocss-button oocss-discret oocss-headed-block oocss-horizontal oocss-s ] message-new" href="{{ path('mesclics_admin_messages', {'filter': 'new'}) }}">Nouveau message</a>
            </li>

            {% if countMessages('draft') > 0 %}
                <li>
                    <a class="[ oocss-button oocss-discret oocss-headed-block oocss-horizontal oocss-s ] messages-draft" href="{{ path('mesclics_admin_messages', {'filter': 'draft'}) }}">Brouillons
                    <span class="[ oocss-index ]">{{ countMessages('draft') }}</span></a>
                </li>
            {% endif %}

            {% if countMessages('sent') > 0 %}
                <li>
                    <a class="[ oocss-button oocss-discret oocss-headed-block oocss-horizontal oocss-s ] messages-sent" href="{{ path('mesclics_admin_messages', {'filter': 'sent'}) }}">Envoyés<span class="[ oocss-index ]">{{ countMessages('sent') }}</span></a>
                    
                </li>
            {% endif %}
        </ul>
    </li>
</ul>